@model IEnumerable<Fitness_Club2.Models.Training>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Все тренировки</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dateOfTraining)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.Name_Room)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Training_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfTraining)
        </th>

        <th>
            Количество записанных людей
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dateOfTraining)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Name_Room)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trainer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Training_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOfTraining)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainingUsers.Count)
        </td>

        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.IdTraining }) |
            @Html.ActionLink("Детально", "Details", new { id = item.IdTraining }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.IdTraining })
        </td>
    </tr>
}

</table>
